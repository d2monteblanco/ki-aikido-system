# Configurações de Produção - Sistema Ki Aikido
# Este arquivo contém variáveis de ambiente para produção

# IMPORTANTE: Este é um arquivo de EXEMPLO
# Copie para .env.production e ajuste os valores
# NUNCA commite o arquivo .env.production com valores reais

# ==================================================
# APLICAÇÃO
# ==================================================

# Ambiente (development, production, testing)
FLASK_ENV=production

# Debug mode (SEMPRE False em produção)
FLASK_DEBUG=False

# Secret Key (GERAR NOVA CHAVE PARA PRODUÇÃO)
# Use: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=SUBSTITUA_POR_CHAVE_SEGURA_GERADA

# ==================================================
# BANCO DE DADOS
# ==================================================

# SQLite Database Path (relativo ao diretório backend/src)
DATABASE_PATH=database/app.db

# Backup automático (True/False)
AUTO_BACKUP=True

# Diretório de backups
BACKUP_DIR=/opt/ki-aikido-system/backups

# ==================================================
# SERVIDOR
# ==================================================

# Host (0.0.0.0 para aceitar conexões externas)
HOST=127.0.0.1

# Porta (5000 é padrão, Nginx faz proxy)
PORT=5000

# ==================================================
# SESSÃO E COOKIES
# ==================================================

# Cookie seguro (True para HTTPS, False para HTTP)
SESSION_COOKIE_SECURE=False

# HTTPOnly Cookie
SESSION_COOKIE_HTTPONLY=True

# SameSite Cookie
SESSION_COOKIE_SAMESITE=Lax

# Tempo de expiração da sessão (em segundos)
# 86400 = 24 horas
PERMANENT_SESSION_LIFETIME=86400

# ==================================================
# CORS (Cross-Origin Resource Sharing)
# ==================================================

# Origins permitidos (separados por vírgula)
# Ajuste conforme seu domínio
CORS_ORIGINS=http://localhost,http://127.0.0.1,http://SEU-DOMINIO.com

# ==================================================
# UPLOADS
# ==================================================

# Diretório de uploads
UPLOAD_FOLDER=/opt/ki-aikido-system/backend/src/uploads/documents

# Tamanho máximo de upload (em bytes)
# 5242880 = 5MB
MAX_CONTENT_LENGTH=5242880

# Extensões permitidas (separadas por vírgula)
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png

# ==================================================
# LOGS
# ==================================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Diretório de logs
LOG_DIR=/opt/ki-aikido-system/logs

# Arquivo de log
LOG_FILE=app.log

# Tamanho máximo do arquivo de log (em bytes)
# 10485760 = 10MB
LOG_MAX_BYTES=10485760

# Número de arquivos de backup
LOG_BACKUP_COUNT=5

# ==================================================
# EMAIL (Configuração futura)
# ==================================================

# Servidor SMTP
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app

# Remetente padrão
MAIL_DEFAULT_SENDER=noreply@kiaikido.com

# ==================================================
# SEGURANÇA
# ==================================================

# Rate Limiting (requisições por minuto)
RATE_LIMIT=60

# Tempo de bloqueio após múltiplas tentativas de login (segundos)
LOGIN_ATTEMPT_TIMEOUT=300

# Máximo de tentativas de login
MAX_LOGIN_ATTEMPTS=5

# ==================================================
# MANUTENÇÃO
# ==================================================

# Modo manutenção (True/False)
MAINTENANCE_MODE=False

# Mensagem de manutenção
MAINTENANCE_MESSAGE=Sistema em manutenção. Retornaremos em breve.

# ==================================================
# MONITORAMENTO
# ==================================================

# Habilitar métricas (True/False)
ENABLE_METRICS=True

# Endpoint de health check
HEALTH_CHECK_ENDPOINT=/api/health

# ==================================================
# NOTAS
# ==================================================

# Para usar este arquivo:
# 1. Copie para .env.production
# 2. Ajuste os valores conforme necessário
# 3. Carregue no código:
#    from dotenv import load_dotenv
#    load_dotenv('.env.production')
#
# Para carregar automaticamente no supervisor:
# Edite /etc/supervisor/conf.d/ki-aikido.conf
# Adicione na seção environment:
#    ENV_FILE="/opt/ki-aikido-system/.env.production"
